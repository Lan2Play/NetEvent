@using NetEvent.Shared
@inject Microsoft.Extensions.Localization.IStringLocalizer<App> Localize


<MudNavMenu Color="Color.Info">
    <MudNavLink Href="/administration/dashboard" Icon="@Icons.Material.Outlined.AdminPanelSettings" Match="NavLinkMatch.Prefix">@Localize["Administration.AdminMenu.Dashboard"]</MudNavLink>
    <AuthorizeView Policy="Admin.Events.*">
        <Authorized>
            <MudNavLink Href="/administration/events" Icon="@Icons.Material.Outlined.Event" Match="NavLinkMatch.Prefix">@Localize["Administration.AdminMenu.Events"]</MudNavLink>
        </Authorized>
    </AuthorizeView>
    <AuthorizeView Policy="Admin.Users.*">
        <Authorized>
            <MudNavLink Href="/administration/users" Icon="@Icons.Material.Outlined.Group" Match="NavLinkMatch.Prefix">@Localize["Administration.AdminMenu.Users"]</MudNavLink>
        </Authorized>
    </AuthorizeView>
    <AuthorizeView Policy="Admin.Settings.*">
        <Authorized>
            <MudNavLink Href="/administration/settings" Icon="@Icons.Material.Outlined.Settings" Match="NavLinkMatch.Prefix">@Localize["Administration.AdminMenu.Settings"]</MudNavLink>
        </Authorized>
    </AuthorizeView>
    <AuthorizeView Policy="Admin.SystemInfo.*">
        <Authorized>
            <MudNavLink Href="/administration/systeminfo" Icon="@Icons.Material.Outlined.Info" Match="NavLinkMatch.Prefix">@Localize["Administration.AdminMenu.SystemInfo"]</MudNavLink>
        </Authorized>
    </AuthorizeView>
    <AuthorizeView Policy="Admin.Images.*">
        <Authorized>
            <MudNavLink Href="/administration/images" Icon="@Icons.Material.Outlined.Image" Match="NavLinkMatch.Prefix">@Localize["Administration.AdminMenu.Images"]</MudNavLink>
        </Authorized>
    </AuthorizeView>

