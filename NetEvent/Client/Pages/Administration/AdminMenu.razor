@using NetEvent.Shared
@inject Microsoft.Extensions.Localization.IStringLocalizer<App> Localize

<MudButton Href="administration" StartIcon="@Icons.Material.Outlined.AdminPanelSettings" Variant="Variant.Text" Class="justify-start" DisableElevation="true" Color="Color.Default" Match="NavLinkMatch.Prefix">@Localize["Administration.AdminMenu.Dashboard"]</MudButton>
<MudDivider />
<AuthorizeView Policy="Admin.Events.*">
    <Authorized>
        <MudButton Href="administration/events" StartIcon="@Icons.Material.Outlined.Event" Variant="Variant.Text" Class="justify-start" DisableElevation="true" Color="Color.Default" Match="NavLinkMatch.Prefix">@Localize["Administration.AdminMenu.Events"]</MudButton>
        <MudDivider />
    </Authorized>
</AuthorizeView>
<AuthorizeView Policy="Admin.Users.*">
    <Authorized>
        <MudButton Href="administration/users" StartIcon="@Icons.Material.Outlined.Group" Variant="Variant.Text" Class="justify-start" DisableElevation="true" Color="Color.Default" Match="NavLinkMatch.Prefix">@Localize["Administration.AdminMenu.Users"]</MudButton>
        <MudDivider />
    </Authorized>
</AuthorizeView>
<MudDivider />
<AuthorizeView Policy="Admin.Settings.*">
    <Authorized>
        <MudButton Href="administration/settings" StartIcon="@Icons.Material.Outlined.Settings" Variant="Variant.Text" Class="justify-start" DisableElevation="true" Color="Color.Default" Match="NavLinkMatch.Prefix">@Localize["Administration.AdminMenu.Settings"]</MudButton>
        <MudDivider />
    </Authorized>
</AuthorizeView>
<MudDivider />
<AuthorizeView Policy="Admin.SystemInfo.*">
    <Authorized>
        <MudButton Href="administration/systeminfo" StartIcon="@Icons.Material.Outlined.Info" Variant="Variant.Text" Class="justify-start" DisableElevation="true" Color="Color.Default" Match="NavLinkMatch.Prefix">@Localize["Administration.AdminMenu.SystemInfo"]</MudButton>
        <MudDivider />
    </Authorized>
</AuthorizeView>
<AuthorizeView Policy="Admin.Images.*">
    <Authorized>
        <MudButton Href="administration/images" StartIcon="@Icons.Material.Outlined.Image" Variant="Variant.Text" Class="justify-start" DisableElevation="true" Color="Color.Default" Match="NavLinkMatch.Prefix">@Localize["Administration.AdminMenu.Images"]</MudButton>
        <MudDivider />
    </Authorized>
</AuthorizeView>
