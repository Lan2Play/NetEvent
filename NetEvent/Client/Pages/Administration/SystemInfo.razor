@page "/administration/systeminfo"
@attribute [Authorize(Policy = "Admin.SystemInfo.*")]

@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using NetEvent.Client.Components
@using NetEvent.Shared.Dto
@using NetEvent.Shared.Dto.Administration
@using NetEvent.Shared.Policy

@inject Microsoft.Extensions.Localization.IStringLocalizer<App> Localize

<MudTabs Elevation="1" Rounded="true">
    <MudTabPanel Text="@Localize["Administration.Systeminfo.Versions"]">
        
    </MudTabPanel>
    <MudTabPanel Text="@Localize["Administration.Systeminfo.Components"]">
        <MudTable Items="@_SystemInfos" Dense="true" Hover="true" Bordered="false" Striped="true" Filter="new Func<SystemInfoDto,bool>(FilterFunc1)"> 
        <ToolBarContent>
            <MudSpacer />
             <MudTextField @bind-Value="searchString1" Placeholder="@Localize["Administration.Systeminfo.Components.SearchPlaceholder"]" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField> 
        </ToolBarContent>
        <HeaderContent>
            <MudTh><MudTableSortLabel InitialDirection="SortDirection.Ascending" SortBy="new Func<SystemInfoDto, object>(x=>x.Key)">@Localize["Administration.Systeminfo.Components.Key"]</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortBy="new Func<SystemInfoDto, object>(x=>x.Value)">@Localize["Administration.Systeminfo.Components.Value"]</MudTableSortLabel></MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Key">@context.Key</MudTd>
            <MudTd DataLabel="Value">@context.Value</MudTd>
        </RowTemplate>
        </MudTable> 
    </MudTabPanel>
    <MudTabPanel Text="@Localize["Administration.Systeminfo.Health"]">
        
    </MudTabPanel>
</MudTabs>
