@page "/administration/users"
@attribute [Authorize(Policy = "Admin.Users.*")]

@using Microsoft.AspNetCore.Authorization;
@using Microsoft.AspNetCore.Identity;
@using NetEvent.Client.Components;
@using NetEvent.Shared.Dto;
@using NetEvent.Shared.Dto.Administration;
@using NetEvent.Shared.Policy;

<MudTabs Elevation="1" Rounded="true">
    <MudTabPanel Text="@Localizer["Administration.Users.Title"]">
        <NetEventDataGrid T="AdminUserDto"
                          MultiSelection="false"
                          Items="@AllUsers"
                          SortMode="SortMode.Single"
                          Filterable="false"
                          ReadOnly="false"
                          EditMode="DataGridEditMode.Form"
                          EditTrigger="DataGridEditTrigger.Manual"
                          CommittedItemChanges="@CommittedUserChangesAsync"
                          QuickFilter="@_usersQuickFilter"
                          Hideable="true">
            <ToolBarContent>
                <MudText Typo="Typo.h6">@Localizer["Administration.Users.Title"]</MudText>
                <MudSpacer />
                <MudTextField @bind-Value="_UsersSearchString" Placeholder="@Localizer["Administration.Users.Search"]" Adornment="Adornment.Start" Immediate="true"
                              AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
            </ToolBarContent>
            <Columns>
                <Column T="AdminUserDto" Field="UserName" Title="@Localizer["Administration.Users.UserName"]" />
                <Column T="AdminUserDto" Field="FirstName" Title="@Localizer["Administration.Users.FirstName"]" />
                <Column T="AdminUserDto" Field="LastName" Title="@Localizer["Administration.Users.LastName"]" />
                <Column T="AdminUserDto" Field="Email" Title="@Localizer["Administration.Users.Email"]" />
                <Column T="AdminUserDto" Field="EmailConfirmed" Title="@Localizer["Administration.Users.EmailConfirmed"]">
                    <CellTemplate>
                        <MudCheckBox Checked="@context.Item.EmailConfirmed" ReadOnly="true" />
                    </CellTemplate>
                    <EditTemplate>
                        <MudCheckBox @bind-Checked="@context.Item.EmailConfirmed" Label="@Localizer["Administration.Users.EmailConfirmed"]" />
                    </EditTemplate>
                </Column>
                <Column T="AdminUserDto" Field="Role" Title="@Localizer["Administration.Users.Role"]">
                    <CellTemplate>
                        @context.Item.Role?.Name
                    </CellTemplate>
                </Column>
                <Column T="AdminUserDto" CellClass="d-flex justify-end">
                    <CellTemplate>
                        <MudIconButton Size="@Size.Small" Icon="@Icons.Material.Outlined.Edit" OnClick="@context.Actions.StartEditingItem" />
                    </CellTemplate>
                    <EditTemplate>
                        <MudSelect @bind-Value="context.Item.Role" ToStringFunc="r => r.Name" Required RequiredError="@Localizer["Administration.Users.Roles.ErrorRoleRequired"]" Margin="@Margin.Dense">
                            @foreach (var role in AllRoles)
                            {
                                <MudSelectItem Value="@(role)">@role.Name</MudSelectItem>
                            }
                        </MudSelect>
                    </EditTemplate>
                </Column>
            </Columns>
            <PagerContent>
                <MudDataGridPager T="AdminUserDto" />
            </PagerContent>
        </NetEventDataGrid>
    </MudTabPanel>
    <MudTabPanel Text="@Localizer["Administration.Users.Roles.Title"]">
        <NetEventDataGrid T="RoleDto"
                          MultiSelection="false"
        @ref="RolesDataGrid"
                          Items="@AllRoles"
                          SortMode="SortMode.Single"
                          Filterable="false"
                          ReadOnly="false"
        @bind-SelectedItem="@SelectedRole"
                          EditMode="DataGridEditMode.Form"
                          EditTrigger="DataGridEditTrigger.Manual"
                          CommittedItemChanges="@CommittedRoleChangesAsync"
                          DeletedItemChanges="@DeletedItemChanges"
                          QuickFilter="@_roleQuickFilter"
                          Hideable="true">
            <ToolBarContent>
                <MudText Typo="Typo.h6">@Localizer["Administration.Users.Roles.Title"]</MudText>
                <MudSpacer />
                <MudTextField @bind-Value="_RoleSearchString" Placeholder="@Localizer["Administration.Users.Roles.Search"]" Adornment="Adornment.Start" Immediate="true"
                              AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
                <MudIconButton Size="@Size.Small" Icon="@Icons.Material.Outlined.Add" OnClick="RolesDataGrid!.AddNewItemAsync" />
            </ToolBarContent>
            <Columns>
                <Column T="RoleDto" Field="Id" Title="@Localizer["Administration.Users.Roles.Id"]" IsEditable="false" />
                <Column T="RoleDto" Field="Name" Title="@Localizer["Administration.Users.Roles.Name"]" />
                <Column T="RoleDto" Field="IsDefault" Title="@Localizer["Administration.Users.Roles.IsDefault"]">
                    <CellTemplate>
                        <MudCheckBox Checked="@context.Item.IsDefault" ReadOnly="true" />
                    </CellTemplate>
                    <EditTemplate>
                        <MudCheckBox @bind-Checked="@context.Item.IsDefault" Label="@Localizer["Administration.Users.Roles.IsDefault"]" />
                    </EditTemplate>
                </Column>
                <Column T="RoleDto" Title="@Localizer["Administration.Users.Roles.Claims"]">
                    <CellTemplate>
                        @if (@context.Item.Claims != null)
                        {
                            @foreach (var claim in @context.Item.Claims)
                            {
                                <div>@claim</div>
                            }
                        }
                    </CellTemplate>
                    <EditTemplate>
                        <MudSelect T="string"
                                   MultiSelection="true"
                                   SelectAll="true"
                        @bind-SelectedValues="context.Item.Claims"
                                   Margin="@Margin.Dense"
                                   SelectAllText="@Localizer["Administration.Users.Roles.SelectAllPermissions"]"
                                   Label="@Localizer["Administration.Users.Roles.Permissions"]"
                                   MultiSelectionTextFunc="@(new Func<List<string>, string>(CreateSelectionLabel))"
                                   HelperText="@SelectionLabelValue" @bind-Value="SelectionLabelValue">
                            @foreach (var policy in Policies.AvailablePolicies)
                            {
                                <MudSelectItem T="string" Value="@(policy)">@policy</MudSelectItem>
                            }
                        </MudSelect>
                    </EditTemplate>
                </Column>
                <Column T="RoleDto" CellClass="d-flex justify-end">
                    <CellTemplate>
                        <MudIconButton Size="@Size.Small" Icon="@Icons.Material.Outlined.Edit" OnClick="@context.Actions.StartEditingItem" />
                        <MudIconButton Size="@Size.Small" Icon="@Icons.Material.Outlined.Delete" OnClick="@(() => RolesDataGrid!.DeleteItemAsync(context.Item))" />
                    </CellTemplate>
                </Column>
            </Columns>
            <PagerContent>
                <MudDataGridPager T="RoleDto" />
            </PagerContent>
        </NetEventDataGrid>
    </MudTabPanel>
</MudTabs>
